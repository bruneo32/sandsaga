			}
		},
		{
			"name": "linux-release-aarch64",
			"displayName": "Linux aarch64 (Release)",
			"description": "aarch64",
			"binaryDir": "${sourceDir}/build/linux-aarch64/release",
			"cacheVariables": {
				"PROCESSOR": "armv8-a",
				"CMAKE_SYSTEM_NAME": "Linux",
				"CMAKE_SYSTEM_PROCESSOR": "aarch64",
